  "tags": [
    {
      "name": "user"
    }
  ],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true,
            "description": "ユーザーID",
            "example": 1
          },
          "displayName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 24,
            "description": "名前",
            "example": "johndoe"
          },
          "createdAt": {
            "type": "string",
            "description": "作成日時（ISO8601）",
            "example": "2024-04-01T01:23:45+09:00"
          },
          "updatedAt": {
            "type": "string",
            "description": "更新日時（ISO8601）（更新されるたびに更新日時が入る）",
            "example": "2024-04-01T01:23:45+09:00"
          },
          "deletedAt": {
            "type": "string",
            "description": "削除日時（ISO8601）（論理削除されたら削除日時が入る）",
            "example": "2024-04-01T01:23:45+09:00"
          }
        },
        "required": [
          "id",
          "displayName",
          "createdAt"
        ]
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "主要なエラーの要因のメッセージ"
          },
          "type": {
            "type": "string",
            "description": "呼び出し元APIの定義しているエラーコード"
          },
          "detail": {
            "type": "string",
            "description": "エラーの詳細に関するメッセージ"
          },
          "status": {
            "type": "integer",
            "minimum": 400,
            "maximum": 600,
            "description": "HTTPステータスコード",
            "example": 500
          }
        },
        "required": [
          "title",
          "type",
          "detail",
          "status"
        ],
        "description": "Problem Details (RFC9457)"
      }
    },
    "parameters": {}
  },
