{
  "name": "example-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently 'npm:api:dev' 'npm:web-tool:dev'",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "api:dev": "npm run dev --prefix apps/api",
    "api:build": "npm run build --prefix apps/api",
    "api:lint": "npm run lint --prefix apps/api",
    "api:lint:fix": "npm run lint:fix --prefix apps/api",
    "api:test": "npm run test --prefix apps/api",
    "web-form:dev": "npm run dev --prefix apps/web-form",
    "web-form:build": "npm run build --prefix apps/web-form",
    "web-form:lint": "npm run lint --prefix apps/web-form",
    "web-form:lint:fix": "npm run lint:fix --prefix apps/web-form",
    "web-form:test": "npm run test --prefix apps/web-form",
    "web-tool:dev": "npm run dev --prefix apps/web-tool",
    "web-tool:build": "npm run build --prefix apps/web-tool",
    "web-tool:lint": "npm run lint --prefix apps/web-tool",
    "web-tool:lint:fix": "npm run lint:fix --prefix apps/web-tool",
    "web-tool:test": "npm run test --prefix apps/web-tool"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "20.11.9",
    "concurrently": "8.2.2",
    "typescript": "5.3.3"
  }
}
